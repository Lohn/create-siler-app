{
    "name": "siler/app",
    "description": "Set up a modern Siler app by running one command.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "leocavalcante",
            "email": "lc@leocavalcante.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "pest",
        "start": ["Composer\\Config::disableProcessTimeout", "php -S localhost:8080 srv/sapi.php"],
        "swoole": ["Composer\\Config::disableProcessTimeout", "php srv/swoole.php"]
    },
    "require": {
        "leocavalcante/siler": "^1.7",
        "monolog/monolog": "^2.1",
        "hassankhan/config": "^2.1"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^9.2",
        "pestphp/pest": "^0.2.3 || ^0.3.0",
        "swoole/ide-helper": "^4.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    }
}
